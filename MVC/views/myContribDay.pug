html 
    head
        title='My questions - My answers'
    
    body
        div.container
            ul.col-md-12.row
                a(href='http://localhost:3000/api/landing_page')
                    li.col-md-2 HomePage
                a(href='http://localhost:3000/api/myPage')
                    li.col-md-2 My Page
                a(href="http://localhost:3000/api/login")
                    li.col-md-2 Login
                a(href='http://localhost:3000/api/logout')
                    li.col-md-2.col-md-offset-1 Logout
                a(href='http://localhost:3000/api/signup')
                    li.col-md-2 Register
        h2(style="margin-left:5%; margin-top:50px; margin-bottom:10px") My Questions 
        table(style="width: 90%; margin-left:5%; border='1'")
            tr
                th Question title 
                th Question text 
                th Question date
            for question in questions 
                tr 
                    th #{question.title}
                    th #{question.text} 
                    th #{answer.date}
        h2(style="margin-left:5%;margin-top:50px; margin-bottom:10px") My Answers 
        table(style="width: 90%; margin-left:5%; border='1'")
            tr 
                th Answer text 
                th Answer date
            for answer in answers 
                tr 
                    th #{answer.text} 
                    th #{answer.date}