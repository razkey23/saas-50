html 
    head
        title='My questions - My answers'
    
    body
        h2(style="margin-left:5%;") My Questions 
        table(style="width: 90%; margin-left:5%; border='1'")
            tr
                th Question title 
                th Question text 
                th Question date
            for question, i in questions 
                tr 
                    th #{question.title}
                    th #{question.text} 
                    th #{answer.date}
        h2(style="margin-left:5%;") My Answers 
        table(style="width: 90%; margin-left:5%; border='1'")
            tr 
                th Answer text 
                th Answer date 
            for answer, i in answers 
                tr 
                    th #{answer.text} 
                    th #{answer.date}