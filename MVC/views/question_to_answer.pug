html 
    head 
        title What question to answer?
    body 
        div.container
            ul.col-md-12.row
                a(href='http://localhost:3000/api/landing_page')
                    li.col-md-2 HomePage
                a(href='http://localhost:3000/api/myPage')
                    li.col-md-2 My Page
                a(href="http://localhost:3000/api/login")
                    li.col-md-2 Login
                a(href='http://localhost:3000/api/logout')
                    li.col-md-2.col-md-offset-1 Logout
                a(href='http://localhost:3000/api/signup')
                    li.col-md-2 Register
        form(class='ask-me' method='POST' action='QuestionToAnswer' style="height: 500px; margin-left: 600px; margin-top: 150px; background: green; margin-bot: 300px; width: 700px")
            p(style="margin-left: 50px") Select question
            select#menu1(name='question', size=1, style="margin-left: 50px")
                for question in questions 
                    option(value=question.id) #{question.title} - #{question.text}
            br 
            br 
            button(class='btn btn-primary btn-block' type="submit") Select this question 
        