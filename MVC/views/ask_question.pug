html 
    head 
        title Ask a question page
        link(rel='stylesheet' href='/css/style.css')
    body 
        div.container
            ul.col-md-12.row
                a(href='http://localhost:3000/api/landing_page')
                    li.col-md-2 HomePage
                a(href='http://localhost:3000/api/myPage')
                    li.col-md-2 My Page
                a(href="http://localhost:3000/api/login")
                    li.col-md-2 Login
                a(href='http://localhost:3000/api/logout')
                    li.col-md-2.col-md-offset-1 Logout
                a(href='http://localhost:3000/api/signup')
                    li.col-md-2 Register
        form(method='POST' action='submitQuestion')
            h1(style="padding: 30px 0px 10px 5%; color:midnightblue; font-weight:700") Ask a question
            p(style="margin-left:5%; margin-top:20px; font-size:20px; color:midnightblue")
                | Question title:
                br
                input(name='title', value='', type='text' style="width:90%; color:black")
                br
                br 
                | Question text: 
                br
                textarea(name='text', value='', type='text' style="width:90%; color:black; resize:none" rows=5)
                br 
                br 

                | keywords: 
                br 
                select#menu1(name='keywords', size=keywords.length, multiple='', style="margin-left: 50px")
                    for keyword in keywords 
                        option(value=keyword.id) #{keyword.keyword}
                br
                br

            div(style="display:flex; justify-content:center; align-items:center; width:100%")
                button(class='btn btn-primary btn-block' style="width:20%; padding:10px 0px; font-size:18px" type="submit") Ask
        
        